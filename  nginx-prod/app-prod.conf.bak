server {
    listen 80;
    listen [::]:80;

    server_name lovespark.xyz www.lovespark.xyz;
    server_tokens off;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    location / {
        return 301 https://lovespark.xyz$request_uri;
    }
}

server {
    listen 443 ssl;

    server_name lovespark.xyz www.lovespark.xyz;
    # ssl_certificate /etc/nginx/ssl/live/lovespark.xyz/fullchain.pem;
    # ssl_certificate_key /etc/nginx/ssl/live/lovespark.xyz/privkey.pem;

    index index.php index.html;
    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
    root /var/www/src;
    error_page 404 404.php;

    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass app:9000;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
    }
}